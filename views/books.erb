<header style="display: flex;">
	<div class="user">
  		<%= current_user.username %>
	</div>
	<form action="/logout" method="POST">
  		<button>Logout</button>
	</form> 
</header>
<section>
	<div class="container">
		<form action=""> 
			<h2><%= current_user.username %>'s Library</h2>
			<div class="library">
				<% if @books.any? %>
					<% @books.each do |book|%>
						<p>
							<div class="link">
								<p><a href="/books/<%= book.id %>"><%= book.title %></a></p>
							</div>
						</p>
						<p style="text-align: center;">
							by <%= book.author %>
						</p><br>
					<% end %>
				<% else %>
					<p>No books found</p> 
				<% end %>
			</div>
			<div class="link">
				<p><a href="/add-book">Add more</a></p>
			</div>
		</form>
	</div>
</section>